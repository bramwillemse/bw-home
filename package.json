{
  "name": "webpack-boilerplate",
  "version": "2.0.0",
  "description": "Sensible webpack 5 boilerplate using Babel and PostCSS with a hot dev server and an optimized production build.",
  "main": "index.js",
  "author": "Tania Rascia",
  "license": "MIT",
  "scripts": {
    "dev": "npx run-p dev:*",
    "dev:webpack": "NODE_ENV=development webpack serve --mode development",
    "dev:hugo": "hugo --watch",
    "build": "npx run-s build:*",
    "build:webpack": "webpack --mode production",
    "build:hugo": "hugo --environment production"
  },
  "devDependencies": {
    "@babel/core": "^7.26.9",
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/preset-env": "^7.26.9",
    "@webpack-cli/serve": "^2.0.5",
    "autoprefixer": "^10.4.20",
    "babel-loader": "^9.2.1",
    "clean-webpack-plugin": "^4.0.0",
    "css-loader": "^7.1.2",
    "glob": "^10.3.10",
    "mini-css-extract-plugin": "^2.9.2",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.3",
    "postcss-cli": "^11.0.0",
    "postcss-custom-media": "^10.0.2",
    "postcss-import": "^16.0.1",
    "postcss-import-ext-glob": "^2.1.1",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.1.5",
    "postcss-reporter": "^7.1.0",
    "stylelint": "^16.2.1",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "webpack": "^5.90.3",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.0.2"
  },
  "dependencies": {
    "vanilla-lazyload": "^17.8.8"
  }
}
